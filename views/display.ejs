<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Display Blogs</title>
    <!-- TailwindCSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            background: linear-gradient(to right, #edf2f7, #e2e8f0);
        }
    </style>
</head>
<body class="bg-gray-100">
    <div class="container mx-auto py-12">
        <h1 class="text-3xl font-bold text-center text-gray-800 mb-8">All Blogs</h1>
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            <% if (blogs.length > 0) { %>
                <% blogs.forEach(blog => { %>
                    <div class="bg-white shadow-lg rounded-lg p-6 transition-transform transform hover:scale-105 hover:shadow-xl">
                        <h2 class="text-xl font-semibold text-gray-800 hover:text-blue-600 transition-colors"><%= blog.title %></h2>
                        <p class="text-gray-600 mt-2"><%= blog.content.substring(0, 100) %>...</p>
                        <p class="text-sm text-gray-500 mt-4">By: <%= blog.author %></p>
                        <p class="text-xs text-gray-400 mt-1">Created on: <%= blog.createdAt.toDateString() %></p>

                        <div class="mt-4 flex justify-end">
                            <!-- Update Blog Form -->
                            <form action="/show-update-form" method="POST">
                                <input type="hidden" name="blogId" value="<%= blog.id %>">
                                <button type="submit" 
                                        class="bg-blue-600 text-white px-4 py-2 rounded-lg shadow hover:bg-blue-500 transition-colors">
                                    Update
                                </button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p class="text-gray-500 text-center col-span-3">No blogs available to display.</p>
            <% } %>
        </div>

         <!-- Back to Home Button -->
         <div class="mt-8 text-center">
            <a href="/index" class="bg-green-600 text-white px-6 py-3 rounded-lg shadow hover:bg-green-500 transition-colors">
                Back to Home
            </a>
        </div>
    </div>
</body>
</html>